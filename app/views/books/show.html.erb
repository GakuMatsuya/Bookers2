<div class="container">
  <div class="row">
    <%= render "layouts/sidebar", book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
  
  <table>
    <tr>
      <td>
        <%= link_to user_path(@book.user) do %>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %> </br>
          <%= @user.name %>
        <% end %>
      </td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></td>
      <% end %>
    </tr>
  </table>
    </div>
  </div>
</div>